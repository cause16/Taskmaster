@model Taskmaster.ViewModels.TaskViewModel
@{
	Layout = null;
}

<form class="update-task-form" method="post" asp-action="update-task" asp-controller="project-task">
	<input type="hidden" asp-for="Id" />
	<input type="hidden" asp-for="ProjectId" />
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" />
		<span asp-validation-for="Name" class="error task-name-error"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description"></textarea>
		<span asp-validation-for="Description" class="error task-description-error"></span>
	</div>
	<div class="form-group">
		<label asp-for="Priority"></label>
		<select asp-for="Priority">
			<option value="None">Немає</option>
			<option value="Low">Низький</option>
			<option value="Medium">Середній</option>
			<option value="High">Високий</option>
		</select>
		<span asp-validation-for="Priority" class="error task-priority-error"></span>
	</div>
	<div class="form-group">
		<label asp-for="EndDate"></label>
		<input asp-for="EndDate" />
		<span asp-validation-for="EndDate" class="error task-date-error"></span>
	</div>
	<div class="form-group">
		<label asp-for="EndTime"></label>
		<input asp-for="EndTime" />
		<span asp-validation-for="EndTime" class="error task-time-error"></span>
	</div>
	<div class="form-buttons">
		<button type="submit" class="button primary small">Зберегти</button>
		<button type="button" class="cancel button small">Скасувати</button>
	</div>
</form>
